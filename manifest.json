{
    "author": "Nikhil Warke",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "description": "Companion App for PasteIt",
    "icons": {
        "128": "images/iconStore.png",
        "16": "images/icon.png",
        "48": "images/iconLauncher.png"
    },
    "background": {
        "scripts": ["scripts/popup.js"]
    },
    "manifest_version": 2,
    "name": "PasteIt",
    "permissions": [
        "activeTab",
        "identity",
        "clipboardWrite",
        "clipboardRead"
    ],
    "version": "0.0.15",
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
